<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <title>Craigslist</title>

    <%- include layouts/css_header.ejs -%>

</head>
<body>


<!-- ============================== Top Navbar for every page ============================= -->
<%- include('layouts/header.ejs', {isHomePage: false}) -%>


<!-- ============================== Second navbar for language drop-down menu          and            Location drop-down menu ============================= -->
<nav class="navbar navbar-expand-lg navbar-light second-navbar-panel">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown"
                   data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    English
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="#">English</a>
                    <a class="dropdown-item" href="#">Français</a>
                    <a class="dropdown-item" href="#">Dansk</a>
                    <a class="dropdown-item" href="#">Deutsch</a>
                    <a class="dropdown-item" href="#">Español</a>
                    <a class="dropdown-item" href="#">Italiano</a>
                    <a class="dropdown-item" href="#">Português</a>
                    <a class="dropdown-item" href="#">Suomi</a>
                    <a class="dropdown-item" href="#">Svenska</a>
                    <a class="dropdown-item" href="#">Türkçe</a>
                    <a class="dropdown-item" href="#">普通话</a>
                    <a class="dropdown-item" href="#">日本語</a>
                    <a class="dropdown-item" href="#">한국어</a>
                </div>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown"
                   data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    US, California
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="#">Change my city</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#">Change my Region</a>
                </div>
            </li>
            <li class="li" style="margin-left: 60px;width: 600px">
                <div class="input-group mb-3">
                    <button class="btn btn-outline-secondary" type="button" id="button-addon1"><i
                                class="bi bi-search"></i></button>
                    <input type="text" class="form-control" placeholder="" aria-label="Example text with button addon"
                           aria-describedby="button-addon1">
                </div>
            </li>
            <li class="nav-item" style="margin-left: 20px">
                <a class="nav-link" href="#" style="border-left:1px solid white">Explore</a>
            </li>
        </ul>
    </div>
</nav>


<!-- ============================== Body AND Footer ============================= -->
<div class="container-fluid">

    <div class="row d-flex justify-content-center">
        <div class="col-md-12 text-center mt-5 mb-5">
            <h1 class="display-3">Name of Category or Search</h1>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-md-3 " style="text-align: center">
            <h5 class="display-5">Filters</h5>
        </div>
        <div class="col-md-9">
            <% for (let i = 0; i < 4; i++) { %>
                <%- include('_partials/row_of_3_collections') -%>
            <% } %>
        </div>
    </div>


    <!-- FOOTER -->
    <%- include layouts/footer.ejs -%>
</div>


<!-- BOOTSTRAP JavaScript CDN-->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>